<p id="notice"><%= notice %></p>

<h1>Diaries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Day</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.title %></td>
        <td><%= diary.created_at.to_formatted_s(:extra_short) %></td>
        <td><%= diary.content %></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Show', diary %></button></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_diary_path(diary) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default"><%= link_to 'New Diary', new_diary_path %></button>
